{% if ansible_hostname in groups["prometheus"] %}
server {
	listen 80 default_server;
	server_name _;


	location /prometheus {
		proxy_pass http://localhost:9090;
	}

    location /metrics {
		proxy_pass http://localhost:9100/metrics;
	}
}
{% else %}
server {
	listen 80 default_server;
	server_name _;

	location / {
		uwsgi_pass localhost:5000;
		include uwsgi_params;
	}
}
{% endif %}