# forward over tcp with octet framing according to RFC 5425
{% for host in groups["influxdb"] %}
action(type="omfwd" Protocol="udp" Target="{{ host }}" Port="6514" Template="RSYSLOG_SyslogProtocol23Format")
{% endfor %}
